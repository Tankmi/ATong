<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_white_5"
    android:orientation="vertical">

    <Button
        android:id="@+id/bt_dialog_eyesight_seluser_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/margin_lr_normal"
        android:background="@drawable/btn_close"
        />

    <com.jemer.atong.fragment.eyesight.view.EyesightSelUserWheelView
        android:id="@+id/wv_dialog_eyesight_seluser"
        android:layout_marginTop="@dimen/margin_tb_large"
        android:layout_marginLeft="@dimen/margin_lr_normal"
        android:layout_marginRight="@dimen/margin_lr_normal"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/bt_dialog_eyesight_seluser_affirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_tb_normal"
        android:layout_marginBottom="@dimen/margin_tb_normal"
        android:layout_marginLeft="@dimen/margin_lr_xlarge"
        android:layout_marginRight="@dimen/margin_lr_xlarge"
        android:background="@drawable/back_transparent_login_90"
        android:drawablePadding="@dimen/margin_lr_small"
        android:gravity="center"
        android:letterSpacing="0.5"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_large" />
</LinearLayout>