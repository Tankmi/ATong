<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:fitsSystemWindows="true"
    >

    <include
        android:id="@+id/title"
        layout="@layout/view_title"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_guidance_lose_weight_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_lr_large"
        android:layout_marginRight="@dimen/margin_lr_large"
        />

    <TextView
        android:id="@+id/tv_glwp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_guidance_lose_weight_period"
        android:layout_marginLeft="@dimen/margin_lr_large"
        android:layout_marginRight="@dimen/margin_lr_large"
        android:layout_marginTop="@dimen/margin_tb_normal"
        android:includeFontPadding="false"
        android:text="准备用多长时间？"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_large"
        />


    <TextView
        android:id="@+id/tv_glwp_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_glwp"
        android:letterSpacing="0.2"
        android:layout_centerHorizontal="true"
        android:includeFontPadding="false"
        android:textColor="@color/sel_login_btn"
        android:textSize="@dimen/text_size_large"
        />


    <com.huidf.slimming.view.loading.RadioHorizonalRuler
        android:id="@+id/view_glwp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_lr_normal"
        android:layout_marginRight="@dimen/margin_lr_normal"
        android:layout_below="@+id/tv_glwp_value"
        />


    <TextView
        android:id="@+id/tv_glwp_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_glwp"
        android:letterSpacing="0.2"
        android:layout_centerHorizontal="true"
        android:includeFontPadding="false"
        android:textColor="@color/app_text_color_warn"
        android:textSize="@dimen/text_size_normal"
        />

    <TextView
        android:id="@+id/tv_glwp_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:letterSpacing="0.2"
        android:layout_centerHorizontal="true"
        android:includeFontPadding="false"
        android:textColor="@color/text_color_hint"
        android:textSize="@dimen/text_size_small"
        />


</RelativeLayout>