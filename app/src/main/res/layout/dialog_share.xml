<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_share_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/all_bg"
    >

    <TextView
        android:id="@+id/tv_share_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请选择分享平台"
        android:gravity="center"
        android:textColor="@color/text_color_normal"
        android:textSize="@dimen/text_size_big"
        />

    <LinearLayout
        android:id="@+id/rel_share_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_share_title"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/iv_share_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_wechat"
            />

        <ImageView
            android:id="@+id/iv_share_moments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_wechat_friends_circle"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_share_dismiss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:text="取消分享"
        android:textColor="@color/text_color_normal"
        android:textSize="@dimen/text_size_normal"
        />

</RelativeLayout>