<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_home_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/title"
        layout="@layout/title_view"
        android:visibility="gone" />


    <LinearLayout
        android:id="@+id/lin_tab_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_tb_small"
        android:paddingBottom="@dimen/margin_tb_small">

        <LinearLayout
            android:id="@+id/lin_tab_home_choiceness"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab_home_choiceness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/back_home_tab1" />

            <TextView
                android:id="@+id/tv_tab_home_choiceness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_tb_small"
                android:text="首页"
                android:textSize="@dimen/settings_text_size"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_tab_home_dynamic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab_home_dynamic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/back_home_tab2" />

            <TextView
                android:id="@+id/tv_tab_home_dynamic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_tb_small"
                android:text="发现"
                android:textSize="@dimen/settings_text_size"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_tab_home_history"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab_home_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/back_home_tab4" />

            <TextView
                android:id="@+id/tv_tab_home_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_tb_small"
                android:text="历史记录"
                android:textSize="@dimen/settings_text_size"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_tab_home_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab_home_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/back_home_tab5" />

            <TextView
                android:id="@+id/tv_tab_home_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_tb_small"
                android:text="个人中心"
                android:textSize="@dimen/settings_text_size"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/line_home_tab"
        style="@style/horizontal_line_style"
        android:layout_above="@id/lin_tab_home" />

    <FrameLayout
        android:id="@+id/fl_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/line_home_tab" />

    <WebView
        android:id="@+id/web_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />


</RelativeLayout>