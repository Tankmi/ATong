<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/title_view"
        android:visibility="gone" />

    <com.jemer.atong.fragment.eyesight.view.Eyesightview
        android:id="@+id/rl_eyesight_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#096"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/eyesight_unit"
                android:layout_height="@dimen/eyesight_unit"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_e_small" />

            <ImageView
                android:layout_width="@dimen/eyesight_unit"
                android:layout_height="@dimen/eyesight_unit"
                android:layout_marginTop="@dimen/margin_tb_normal"
                android:scaleType="fitCenter"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:src="@drawable/icon_e_small" />

            <ImageView
                android:layout_width="@dimen/eyesight_unit"
                android:layout_height="@dimen/eyesight_unit"
                android:layout_marginTop="@dimen/margin_tb_normal"
                android:scaleType="fitCenter"
                android:scaleX="0.36"
                android:scaleY="0.36"
                android:src="@drawable/icon_e_small" />

            <ImageView
                android:layout_width="@dimen/eyesight_unit"
                android:layout_height="@dimen/eyesight_unit"
                android:layout_marginTop="@dimen/margin_tb_normal"
                android:scaleType="fitCenter"
                android:scaleX="0.23"
                android:scaleY="0.23"
                android:src="@drawable/icon_e_small" />
        </LinearLayout>
    </com.jemer.atong.fragment.eyesight.view.Eyesightview>

</LinearLayout>