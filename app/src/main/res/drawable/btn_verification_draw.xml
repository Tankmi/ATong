        </shape>
    </item>

    <item android:state_enabled="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android" >
            <corners android:radius="90dp" />
            <solid   android:color="@color/text_color_login"/>
            <padding
                android:left="@dimen/margin_lr_8"
                android:right="@dimen/margin_lr_8"
                android:top="@dimen/margin_tb_xsmall"
                android:bottom="@dimen/margin_tb_xsmall"/><!-- 各方向的间隔 -->
        </shape>
